{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category",
    "description": "Categorias de jogos"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 100
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text",
      "maxLength": 500,
      "required": false
    },
    "icon": {
      "type": "string",
      "required": false,
      "maxLength": 50
    },
    "color": {
      "type": "string",
      "required": false,
      "maxLength": 7,
      "default": "#000000"
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "required": false
    },
    "sort_order": {
      "type": "integer",
      "default": 0,
      "required": false
    },
    "games": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::game.game",
      "mappedBy": "categories",
      "required": false
    }
  }
}
