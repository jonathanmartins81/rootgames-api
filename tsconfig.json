{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",

    // Configurações de compilação
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": false,
    "noEmitOnError": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,

    // Configurações de paths e resolução
    "paths": {
      "@/*": ["src/*"],
      "@api/*": ["src/api/*"],
      "@config/*": ["config/*"],
      "@database/*": ["database/*"],
      "@docs/*": ["docs/*"],
      "@scripts/*": ["scripts/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@extensions/*": ["src/extensions/*"]
    },

    // Tipos incluídos
    "types": [
      "node",
      "@types/react",
      "@strapi/strapi",
      "jest",
      "supertest"
    ],

    // Configurações de performance
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },

  "include": [
    "./",
    "./**/*.ts",
    "./**/*.js",
    "./**/*.json",
    "src/**/*",
    "config/**/*",
    "database/**/*",
    "scripts/**/*",
    "types/**/*"
  ],

  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**",
    "**/tests/**",
    "src/plugins/**",
    "coverage/",
    "*.min.js",
    "*.bundle.js"
  ],

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "transpileOnly": true,
    "files": true
  },

  "references": [
    {
      "path": "./src/admin"
    }
  ]
}
