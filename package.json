{
  "name": "rootgames-api",
  "private": true,
  "version": "1.0.0",
  "description": "ðŸŽ® RootGames API - Headless CMS para CatÃ¡logo de Jogos com Strapi 5.x",
  "keywords": [
    "strapi",
    "games",
    "api",
    "headless-cms",
    "postgresql",
    "typescript",
    "graphql",
    "gaming"
  ],
  "author": {
    "name": "Jonathan Martins",
    "email": "rocinante626s@gmail.com",
    "url": "https://github.com/jonathanmartins81"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonathanmartins81/rootgames-api.git"
  },
  "homepage": "https://github.com/jonathanmartins81/rootgames-api#readme",
  "bugs": {
    "url": "https://github.com/jonathanmartins81/rootgames-api/issues"
  },
  "scripts": {
    "develop": "strapi develop",
    "start": "strapi start",
    "build": "strapi build",
    "strapi": "strapi",
    "postinstall": "patch-package",
    "dev": "strapi develop",
    "prod": "strapi start",
    "build:prod": "strapi build",
    "build:dev": "strapi build --watch",
    "db:backup": "yarn strapi database:backup",
    "db:restore": "yarn strapi database:restore",
    "db:seed": "yarn strapi database:seed",
    "db:migrate": "yarn strapi database:migrate",
    "admin:create": "yarn strapi admin:create-user",
    "admin:list": "yarn strapi admin:list-users",
    "info": "yarn strapi info",
    "version": "yarn strapi version",
    "telemetry:disable": "yarn strapi telemetry:disable",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "clean": "rm -rf dist build .cache .tmp node_modules/.cache",
    "clean:all": "yarn clean && rm -rf node_modules yarn.lock && yarn install",
    "docker:build": "docker build -t rootgames-api .",
    "docker:run": "docker run -p 1337:1337 rootgames-api",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "backup": "./scripts/backup.sh",
    "deploy": "./scripts/deploy-safe.sh",
    "health": "./scripts/health-check.sh",
    "monitor": "./scripts/monitor.sh",
    "quality": "yarn lint && yarn format && yarn type-check",
    "quality:fix": "yarn lint:fix && yarn format",
    "prepare": "husky",
    "commit": "git-cz",
    "images:optimize": "node -e \"require('./src/utils/imageOptimizer').ImageOptimizer.optimizeDirectory('./public/uploads', './public/uploads/optimized')\"",
    "images:thumbnails": "node -e \"require('./src/utils/imageOptimizer').ImageOptimizer.generateThumbnails('./public/uploads', './public/uploads/thumbnails', [{width: 150, height: 150, suffix: '_thumb'}, {width: 300, height: 200, suffix: '_card'}])\"",
    "images:webp": "node -e \"require('./src/utils/imageOptimizer').ImageOptimizer.createMultipleFormats('./public/uploads', './public/uploads/webp')\""
  },
  "dependencies": {
    "@ckeditor/strapi-plugin-ckeditor": "^1.1.1",
    "@strapi/plugin-graphql": "^5.21.0",
    "@strapi/plugin-users-permissions": "^5.21.0",
    "@strapi/strapi": "^5.21.0",
    "axios": "^1.11.0",
    "imagemin": "^9.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^11.0.1",
    "imagemin-webp": "^8.0.0",
    "jsdom": "^26.1.0",
    "patch-package": "^8.0.0",
    "pg": "^8.16.3",
    "postinstall-postinstall": "^2.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "sharp": "^0.34.3",
    "slugify": "^1.6.6",
    "styled-components": "^6.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/imagemin": "^9.0.1",
    "@types/imagemin-gifsicle": "^7.0.4",
    "@types/imagemin-mozjpeg": "^8.0.4",
    "@types/imagemin-svgo": "^11.0.0",
    "@types/imagemin-webp": "^7.0.3",
    "@types/jest": "^29.5.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.23",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.0.0",
    "supertest": "^6.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0 <=24.x.x",
    "npm": ">=9.0.0",
    "yarn": ">=1.22.0"
  },
  "strapi": {
    "uuid": "c6c2352e-243d-4b11-ab5c-444195db4e81",
    "template": "https://github.com/strapi/strapi-template-blog"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/admin/**/*"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@strapi/eslint-config",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write"
    ]
  }
}
